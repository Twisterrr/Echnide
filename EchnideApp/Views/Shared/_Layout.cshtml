<!DOCTYPE html>
<html lang="fr">

<head> 
    <meta charset="utf-8" /> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> 
    <title>@ViewData["Title"] - Echnide</title>

    <link rel="icon" href="~/picture/logo/favicon.png">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 
    <link rel="stylesheet" href="~/css/site.css" /> 
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head> 

<body> 
    <header> 
        <nav id="nav-bar">
            <input type="checkbox" id="check">
            <label for="check" class="button">
                <i class="fas fa-bars"></i>
            </label>
            <div class="container-menu">
                <ul class="menu">
                    <li class="cours">   Cours    </li>
                    <li class="projet">  Projets  </li>
                    <a class="temp" asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="logo-black" src="~/picture/logo/logo_black.png">
                    </a>
                    <li class="about">   About    </li>
                    <li class="contact"> Contacts </li>
                </ul>
            </div>
            <img class="settings" src="~/picture/logo/logo_settings.png">
        </nav> 

            <div class="container"> 
                <main role="main" class="pb-3"> 
                    @RenderBody() 
                </main> 
            </div> 
    </header>

    <footer class="border-top footer text-muted"> 
        <div class="container"> 
            &copy; 2020 - Echnide - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> 
        </div>
    </footer>
</body> 



<script src="~/lib/jquery/dist/jquery.min.js"></script> 
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
<script src="~/js/site.js" asp-append-version="true"></script> 
@await RenderSectionAsync("Scripts", required: false) 
</html> 